#!/bin/bash
#SBATCH --mail-user=jimarsh@unc.edu
#SBATCH --mail-type=ALL
#SBATCH -p general
#SBATCH -N 1
#SBATCH -t 00-86:00:00
#SBATCH --mem=40g
#SBATCH -a 1-10%10
#SBATCH -n 1
#SBATCH -o /nas/longleaf/home/jimarsh/LOGFILES/production5_BGS_highS_midG_contract.o
#SBATCH -e /nas/longleaf/home/jimarsh/LOGFILES/production5_BGS_highS_midG_contract.e

echo "SLURM_JOBID: " $SLURM_JOBID
echo "SLURM_ARRAY_TASK_ID: " $SLURM_ARRAY_TASK_ID
echo "SLURM_ARRAY_JOB_ID: " $SLURM_ARRAY_JOB_ID

declare -i startID=0

declare -i repID=${startID}+$SLURM_ARRAY_TASK_ID

cd /work/users/j/i/jimarsh/drosoph_sims/dfe_production5box

module load slim
module load gcc
module load r
module load vcftools

 slim -d d_repID=${repID} -d d_f0=0.25 \
	 -d d_f1=0.49 \
	 -d d_f2=0.04 \
	 -d d_f3=0.22 \
	 -d d_f_pos=0.005 \
	 -d d_gamma_pos=250 \
	 -d 'd_name="production5_BGS_highS_midG_contract"' \
	 /work/users/j/i/jimarsh/drosoph_sims/drosoph5_contract.slim

 grep '#' production5_BGS_highS_midG_contract_R${repID}.vcf > m5_production5_BGS_highS_midG_contract_R${repID}.vcf
grep "MT=5" production5_BGS_highS_midG_contract_R${repID}.vcf >> m5_production5_BGS_highS_midG_contract_R${repID}.vcf 

 vcftools --vcf production5_BGS_highS_midG_contract_R${repID}.vcf --site-pi --out  production5_BGS_highS_midG_contract_R${repID}

 /work/users/j/i/jimarsh/relate_v1.1.9_x86_64_dynamic/bin/RelateFileFormats --mode ConvertFromVcf --haps m5_preproduction5_BGS_highS_midG_contract_R${repID}.haps --sample m5_production5_BGS_highS_midG_contract_R${repID}.sample -i m5_production5_BGS_highS_midG_contract_R${repID}

../new_build_mask.sh production5_BGS_highS_midG_contract_R${repID} 5040001 ../exon5_UTR_pos.txt

 /work/users/j/i/jimarsh/relate_v1.1.9_x86_64_dynamic/bin/RelateFileFormats \
                 --mode FilterHapsUsingMask\
                 --haps m5_preproduction5_BGS_highS_midG_contract_R${repID}.haps \
                 --sample m5_production5_BGS_highS_midG_contract_R${repID}.sample \
                 --mask production5_BGS_highS_midG_contract_R${repID}.mask \
                 -o m5_production5_BGS_highS_midG_contract_R${repID}

/work/users/j/i/jimarsh/relate_v1.1.9_x86_64_dynamic/bin/Relate --mode All -m 3e-9 -N $(grep -ae "Rep${repID} theta pi for neutral interg/intron, size corrected = " /nas/longleaf/home/jimarsh/LOGFILES/production5_BGS_highS_midG_contract.o | sed 's/.*= //g' | sed 's/".*//' | xargs -I [] echo "[] / 0.000000006" | sed -E 's/([+-]?[0-9.]+)[eE]\+?(-?)([0-9]+)/(\1*10^\2\3)/g' | bc -l) --haps m5_production5_BGS_highS_midG_contract_R${repID}.haps --dist m5_production5_BGS_highS_midG_contract_R${repID}.dist --sample m5_production5_BGS_highS_midG_contract_R${repID}.sample --map 5Mb.map --seed ${repID} -o m5_production5_BGS_highS_midG_contract_R${repID}

/work/users/j/i/jimarsh/relate_v1.1.9_x86_64_dynamic/scripts/EstimatePopulationSize/EstimatePopulationSize.sh \
              -i m5_production5_BGS_highS_midG_contract_R${repID} \
              -m 3e-9 \
              --poplabels N50.poplabels \
              --seed ${repID} \
	      --years_per_gen 1 \
              -o m5_production5_BGS_highS_midG_contract_R${repID}_popsize
	
../prep_graph_reps.sh m5_production5_BGS_highS_midG_contract_R${repID}_popsize.coal 10
../graph_replicates.R 10 . m5_production5_BGS_highS_midG_contract
