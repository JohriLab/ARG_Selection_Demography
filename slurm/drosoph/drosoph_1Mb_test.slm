#!/bin/bash
#SBATCH --mail-user=jimarsh@unc.edu
#SBATCH --mail-type=ALL
#SBATCH -p general
#SBATCH -N 1
#SBATCH -t 00-96:00:00
#SBATCH --mem=40g
#SBATCH -a 1-10%10
#SBATCH -n 1
#SBATCH -o /nas/longleaf/home/jimarsh/LOGFILES/drosoph_1Mb_test.o
#SBATCH -e /nas/longleaf/home/jimarsh/LOGFILES/drosoph_1Mb_test.e

echo "SLURM_JOBID: " $SLURM_JOBID
echo "SLURM_ARRAY_TASK_ID: " $SLURM_ARRAY_TASK_ID
echo "SLURM_ARRAY_JOB_ID: " $SLURM_ARRAY_JOB_ID

declare -i startID=0

declare -i repID=${startID}+$SLURM_ARRAY_TASK_ID

cd /work/users/j/i/jimarsh/drosoph_sims/testbox

module load slim
module load gcc
module load r
module load vcftools

 slim -d d_repID=${repID} \
	 -d 'd_name="drosoph_1Mb_test"' \
	 drosoph_1Mb_test.slim

 grep '#' drosoph_1Mb_test_R${repID}.vcf > m5_drosoph_1Mb_test_R${repID}.vcf
grep "MT=5" drosoph_1Mb_test_R${repID}.vcf >> m5_drosoph_1Mb_test_R${repID}.vcf 

 vcftools --vcf drosoph_1Mb_test_R${repID}.vcf --site-pi --out  drosoph_1Mb_test_R${repID}

 /work/users/j/i/jimarsh/relate_v1.1.9_x86_64_dynamic/bin/RelateFileFormats --mode ConvertFromVcf --haps m5_drosoph_1Mb_test_R${repID}.haps --sample m5_drosoph_1Mb_test_R${repID}.sample -i m5_drosoph_1Mb_test_R${repID}

/work/users/j/i/jimarsh/relate_v1.1.9_x86_64_dynamic/bin/Relate --mode All -m 1.25e-8 -N $(grep -ae "Rep${repID} theta pi for neutral interg/intron, size corrected = " /nas/longleaf/home/jimarsh/LOGFILES/drosoph_1Mb_test.o | sed 's/.*= //g' | sed 's/".*//' | xargs -I [] echo "[] / 0.000000025" | bc) --haps m5_drosoph_1Mb_test_R${repID}.haps --sample m5_drosoph_1Mb_test_R${repID}.sample --map 21Mb.map --seed ${repID} -o m5_drosoph_1Mb_test_R${repID}

/work/users/j/i/jimarsh/relate_v1.1.9_x86_64_dynamic/scripts/EstimatePopulationSize/EstimatePopulationSize.sh \
              -i m5_drosoph_1Mb_test_R${repID} \
              -m 1.25e-8 \
              --poplabels N50.poplabels \
              --seed ${repID} \
	      --years_per_gen 1 \
              -o m5_drosoph_1Mb_test_R${repID}_popsize
	
../prep_graph_reps.sh m5_drosoph_1Mb_test_R${repID}_popsize.coal 10
../graph_replicates.R 10 . m5_drosoph_1Mb_test
