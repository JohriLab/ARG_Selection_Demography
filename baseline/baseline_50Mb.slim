initialize() {
	 defineGlobal("scale", 4);
	 defineGlobal("N", asInteger(20000));
    setSeed(1);
    initializeMutationRate(scale*1.25e-8);
    initializeMutationType("m1", 0.5, "f", 0.0);
    m1.mutationStackPolicy = "l";    
    initializeGenomicElementType("g1", m1, 1.0);
    initializeGenomicElement(g1, 0, 49999999);
    initializeRecombinationRate(scale*1e-8);
}
1 early() {
    sim.addSubpop("p1", asInteger(N/scale));
    community.rescheduleScriptBlock(s1, start=asInteger(10*N/scale), end=asInteger(15*N/scale));
}
s1 late(){
    p1.outputSample(10);
    p1.outputVCFSample(sampleSize=10, replace=T, requestedSex="*",outputMultiallelics=T, filePath="slim_out/test.vcf", append=F, outputNonnucleotides=T);
    print("N at the end of simulation: " + p1.individualCount);
    print("The last base in the chromosome: " + sim.chromosome.lastPosition);
}
